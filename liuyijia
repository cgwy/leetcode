bool isMatch(const char *s, const char *p)
{
	if (*p == '\0') return *s == '\0';
	
	if (*(p + 1) == '*')
	{
		while (*s != '\0' && (*p == '.' || *s == *p))
		{
			if (isMatch(s, p + 2)) return true;
			s++;
		}
		return isMatch(s, p + 2);
	}
	else return (*s != '\0' && (*p == '.' || *s == *p)) && isMatch(s + 1, p + 1);
	
	return false;
}
